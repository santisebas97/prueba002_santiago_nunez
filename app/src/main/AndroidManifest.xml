<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aperez.apps.androidfunwithflags">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aperez.apps.androidfunwithflags.MainActivity_SSNT"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aperez.apps.androidfunwithflags.SettingsActivity_SSNT"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.aperez.apps.androidfunwithflags.MainActivity_SSNT"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aperez.apps.androidfunwithflags.MainActivity_SSNT" />
        </activity>
    </application>

</manifest>